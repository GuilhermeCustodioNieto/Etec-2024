<h4>Login:</h4>

<div class="card">
  <div class="card-body">
    <form action="/usuarios/login" method="post">
      <label for="senha">Email: </label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        required
      />
      <label for="senha">Senha: </label>
      <input
        type="password"
        name="senha"
        id="senha"
        class="form-control"
        required
      />
      <br />
      <button class="btn btn-success">Entrar</button>
    </form>
  </div>
</div>