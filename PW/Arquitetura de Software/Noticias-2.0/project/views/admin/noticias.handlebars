<h2>Lista de notícias: </h2>
<hr />
<a href="/admin/noticias/add"><button class="btn btn-success">Nova notícia</button></a>

{{#each noticias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{data}}</small>
      <br />
      <small>Categoria: {{categoria.nome}}</small>
      <br />
      <a href="/admin/noticias/edit/{{_id}}" class="mt-3"><button
          class="btn btn-success"
        >Editar notícia</button></a>
      <a href="/admin/noticias/deletar/{{_id}}" class="mt-3"><button
          class="btn btn-danger"
        >Deletar notícia</button></a>
    </div>
  </div>
{{else}}
  <p>Nenhuma notícia registrada</p>
{{/each}}